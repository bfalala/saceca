<agent-model name="_CommonAgentModel">
  <!-- This file describes properties common to all agents. There is no need to repeat what was added in the similar file for World Objects -->
  <behavior/>
  <categories/>
  <services/>
  <!-- Only properties are currently used for the common agent model. -->
  <!-- Names should start with "i_" because they are for internal use. -->
  <properties>
    <!-- Basics -->
    <string name="i_name" default="anonymous" visibility="public"/>
    
    <!-- Gauges -->
    <double name="i_gauge_primordial_thirst" min="0" max="100" default="90" visibility="private"/>
    <double name="i_gauge_primordial_hunger" min="0" max="100" default="90" visibility="private"/>
    <double name="i_gauge_primordial_tiredness" min="0" max="100" default="90" visibility="private"/>
    <double name="i_gauge_primordial_breath" min="0" max="100" default="90" visibility="private"/>    
    <double name="i_gauge_primordial_naturalneeds" min="0" max="100" default="90" visibility="private"/>    
    <double name="i_gauge_primordial_skintemperature" min="0" max="100" default="90" visibility="private"/>    
	
	<double name="i_gauge_security_financial" min="0" max="100" default="90" visibility="private"/>
	<double name="i_gauge_security_body" min="0" max="100" default="90" visibility="private"/>
	
	<double name="i_gauge_social_love" min="0" max="100" default="90" visibility="private"/>
	<double name="i_gauge_social_friendship" min="0" max="100" default="90" visibility="private"/>
    
	<!-- Emotions -->
	<double name="i_emotion_fear" min="0" max="100" default="50" visibility="public"/>
	<double name="i_emotion_joy" min="0" max="100" default="50" visibility="public"/>
	<double name="i_emotion_disgust" min="0" max="100" default="50" visibility="public"/>
<!-- 	<double name="i_emotion_sadness" min="0" max="100" default="50" visibility="public"/> -->
	<double name="i_emotion_surprise" min="0" max="100" default="50" visibility="public"/>
	<double name="i_emotion_anger" min="0" max="100" default="50" visibility="public"/>
	
	<double name="i_emotion_secondary_jealousy" min="0" max="100" default="50" visibility="public"/>
	<double name="i_emotion_secondary_shame" min="0" max="100" default="50" visibility="public"/>
	<double name="i_emotion_secondary_Contempt" min="0" max="100" default="50" visibility="public"/>
	<double name="i_emotion_secondary_frustation" min="0" max="100" default="50" visibility="public"/>
	<double name="i_emotion_secondary_relief" min="0" max="100" default="50" visibility="public"/>
	<double name="i_emotion_secondary_hope" min="0" max="100" default="50" visibility="public"/>
	<double name="i_emotion_secondary_nervousness" min="0" max="100" default="50" visibility="public"/>
	<double name="i_emotion_secondary_horror" min="0" max="100" default="50" visibility="public"/>
	<double name="i_emotion_secondary_optimism" min="0" max="100" default="50" visibility="public"/>
	<double name="i_emotion_secondary_Submission" min="0" max="100" default="50" visibility="public"/>
	<double name="i_emotion_secondary_Awe" min="0" max="100" default="50" visibility="public"/>
	<double name="i_emotion_secondary_Disappoinment" min="0" max="100" default="50" visibility="public"/>
	<double name="i_emotion_secondary_Remorse" min="0" max="100" default="50" visibility="public"/>
	<double name="i_emotion_secondary_Aggressivness" min="0" max="100" default="50" visibility="public"/>
	<double name="i_emotion_secondary_mepris" min="0" max="100" default="50" visibility="public"/>
	
	
    <!-- Gauges decrement periods, in seconds -->
    <int name="i_decrement_period_default" min="0" max="1000" default="7" visibility="private"/>
    <int name="i_decrement_period_thirst" min="0" max="1000" default="8" visibility="private"/>
	
	<int name="i_decrement_period_joy" min="0" max="1000" default="1" visibility="private" />
    <int name="i_decrement_period_fear" min="0" max="1000" default="1" visibility="private" />
    <int name="i_decrement_period_anger" min="0" max="1000" default="1" visibility="private" />
<!--      <int name="i_decrement_period_sadness" min="0" max="1000" default="1" visibility="private" />  -->
    <int name="i_decrement_period_surprise" min="0" max="1000" default="1" visibility="private" />
    <int name="i_decrement_period_disgust" min="0" max="1000" default="1" visibility="private" />
	
	<!-- Characteristics -->
	<string name="i_characteristics" default="lazy" visibility="private" />
	
    <!-- Perception -->
    <int name="i_perception_maxEyesightDistance" min="0" max="1000" default="10" visibility="private"/>
    <int name="i_perception_maxHearingDistance" min="0" max="1000" default="10" visibility="private"/>
  </properties>
</agent-model>